<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"  content="width=device-width, minimum-scale=.5">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Проект</title>
    <link href="../../static/css/project.css" rel="stylesheet">
    <link href="../../static/css/modules/footer_2.css" rel="stylesheet">
    <link href="../../static/css/splide/splide-core.css" rel="stylesheet">
    <link href="../../static/css/splide/splide.css" rel="stylesheet">
    <link href="../../static/css/modules/custom-cursor.css" rel="stylesheet">

    <script src="../../static/js/libs/splide.js"></script>
    <script src="../../static/js/libs/splide-auto-scroll-extension.js"></script>
    <script src="../../static/js/custom-cursor.js"></script>
</head>
<body>
<div class="pop-up-block" data-touch="yes">
    <div class="pop-up-block__close-element"><img src="../../media/icons/close-icon.svg" alt="image" data-touch="yes"></div>
    <div class="pop-up-block__image" data-dont-touch="true">
        <img src="" alt="there must be image)" data-dont-touch="true">
    </div>
    <div class="pop-up-block__video" data-dont-touch="true">
        <iframe src="/" frameborder="0" data-dont-touch="true"></iframe>
    </div>
</div>

{% include "../modules/header.njk" %}


<main class="main">
    <div class="description" style = "background-image: url('{{ project.preview_pic.url }}');">
        <div class="description__description-container container">
            <div class="description__description-text">
                <h2>{{ project.title }}</h2>
                <p>{{ project.description }}</p>
            </div>
        </div>
    </div>
    <div class="splide">
        <div class="splide__track">
            <ul class="splide__list">
                <li class="splide__slide">
                    <img src="../../media/imgs/spaceHalloween-background.png" alt="image" data-video="true" data-src="https://www.youtube.com/embed/{{ project.video_id }}" ondragstart="return false">
                    <img class="video-image" src="../../media/icons/start-video-icon.svg"  alt="" data-video="true" data-src="https://www.youtube.com/embed/{{ project.video_id }}" ondragstart="return false">
                </li>

                {% for img in project.project_images.all%}
                <li class="splide__slide"><img src="{{img.image.url}}" alt="image" data-image="true" ondragstart="return false"></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="workers container">
        <h3>Над проектом работали:</h3>
        <div class="workers__workers-container">
            {% for dev in devs %}
            <div class="workers__worker-card mouse-enter">
                <div class="workers__image">
                    <a href="http://127.0.0.1:8000/profile/{{ dev.user.username }}/" ondragstart="return false"><img src="../../media/imgs/designer.jpg" alt="there must be image"></a>
                </div>
                <div class="workers__description">
                    <h4>{{ dev.user.last_name }} {{ dev.user.first_name }}</h4>
                    <p>{% for skill in dev.user.profile.skills.all %}{{ skill.name }} {% endfor %}</p>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>
    </div>
</main>

{% include "../modules/footer_2.njk" %}

<div class="cursor-dot-outline"></div>
<div class="cursor-dot"></div>

<script src="../../static/js/project-slider.js"></script>
</body>
</html>
